

<%  layout("/layouts/boilerplate") %>
<style>

    .add{
        background-color: black !important;
        color: white !important;
    }
</style>

    <div class="row mt-3">
        <div  class="col-8   offset-2">
    <h3>Add a New Tyre Details</h3>
    
    
    <form method="POST" action="/listings"  novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title"  class="form-label">Title</label>
        <input 
         name="listing[title]"
          placeholder="Add a catchy Title"
           class="form-control"
           type="text"
           required
           />
           <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description"  class="form-label">Desciption</label>

   <textarea 
   name="listing[description]"   
   class="form-control" required
   ></textarea>
   <div class="invalid-feedback">Please enter a short description</div>
      </div>


      <div class="mb-3">
        <label for="image"  class="form-label">Image Link</label>
        <input  name="listing[image]" placeholder="enter image URL/Link " type="text" class="form-control"/>
      </div>
      
      

<div class="row">        
        <div class="mb-3  col-md-4 ">
            <label for="price"  class="form-label">price</label>
            <input 
             name="listing[price]" 
             placeholder="1200" 
            
             class="form-control"
              required
             />
             <div class="invalid-feedback">Price should be valid</div>
        </div>
    

        

        <div class="mb-3  col-md-8">
            <label for="model"  class="form-label"  >Model</label>
            <input name="listing[model]" placeholder="India" type="text" class="form-control" required/>
            <div class="invalid-feedback">model name should be valid</div>
        </div>
    </div>


        <div class="mb-3 col-md-8">
            <label for="type"  class="form-label">Type</label>
            <input  name="listing[type]" placeholder="Winter, Summer,Highway" type="text"  class="form-control"  required/>
            <div class="invalid-feedback">Type name should be valid</div>
        </div>

        
                  


           <div class="div1"></div>
          

        
        
    
        <br/> <br/>
        <button class="btn btn-dark  add-btn   mt-3  add ">Add</button>
        <br><br>
    </form>
   
</div>



    </div>

    
            
    
    
    
